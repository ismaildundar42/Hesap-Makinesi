<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66A6D8"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtBirinciSayi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="Birinci Sayi Giriniz"
        android:inputType="number|numberDecimal|numberSigned"
        app:layout_constraintBottom_toTopOf="@+id/txtIkinciSayi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="139dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIkinciSayi">

        <Button
            android:id="@+id/btnTopla"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:onClick="topla"
            android:text="+" />

        <Button
            android:id="@+id/btnCikar"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:onClick="cikar"
            android:text="-" />

    </LinearLayout>

    <EditText
        android:id="@+id/txtIkinciSayi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="İkinci Sayi Giriniz"
        android:inputType="number|numberDecimal|numberSigned"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/txtBirinciSayi"
        app:layout_constraintTop_toBottomOf="@+id/txtBirinciSayi" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="139dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/txtSonuc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/btnCarp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:onClick="carp"
            android:text="*" />

        <Button
            android:id="@+id/btnBol"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:onClick="bol"
            android:text="/" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtSonuc"
        android:layout_width="182dp"
        android:layout_height="0dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="239dp"
        android:text="Sonuç = null"
        android:textColor="#D80404"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>